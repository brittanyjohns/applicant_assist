<div class="row clearfix cart-row">
  <div class="col">
    <div class="card-body">
      <%= simple_form_for order_item, class: 'form-inline', remote: true do |f| %>
        <div class="input-group mb-3">
          <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
          <%= f.hidden_field :product_id, value: product.id %>
          <div class="input-group-append">
            <%= f.submit "Update Quantity", class: "btn btn-success" %>
          </div>
        </div>
        <br>
        <p>
          Unit Price: <%= number_to_currency order_item.unit_price %> - Coin Value: <%= order_item.coin_value %></p>
        <hr>
        <p>Total Price: <%= number_to_currency order_item.total_price %> - Total Coin Value: <%= order_item.total_coin_value %></p>
      <% end %>
    </div>
  </div>
  <div class="col-md-2">
    <%= image_tag(product.image.variant(resize_to_fill: [192, 192]), class: "img-fluid") if product.image.attached? %>
    <%= button_to "Delete", order_item, {data: {confirm: "Are you sure you wish to delete the product '#{order_item.product.name}' from your cart?"}, method: :delete, remote: true, class: "btn btn-danger float-end"} %>
  </div>
</div>

<h1><%= @company.name %></h1>
<div class ='row'>
  <div class="col">
  <h2>Company Info</h2>
  <%= render @company %>
</div>

<div class="col">
  <h2>Active Job Listings</h2>
  <hr>
  <%= render @company.jobs %>
</div>
</div>
<div>
  <%= link_to "Edit this company", edit_company_path(@company) %> |
  <%= link_to "Back to companies", companies_path %>

  <%= button_to "Destroy this company", @company, method: :delete %>
</div>

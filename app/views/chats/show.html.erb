<%= render @chat %>
<hr>
<%= turbo_stream_from @chat %>
<div id="messages" class="scrolling-chatbox">
  <%= render @chat.messages %>
</div>
<div class="col-md-12">
  <%= render partial: "messages/form", locals: { chat: @chat, message: Message.new } %>
</div>
<div>
  <%= link_to "Edit this chat", edit_chat_path(@chat) %> |
  <%= link_to "Back to chats", chats_path %>
  <%= button_to "Destroy this chat", @chat, method: :delete %>
</div>

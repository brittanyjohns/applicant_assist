<p style="color: green"><%= notice %></p>

<h1>Jobs <small><%= @jobs.count %> total jobs</h1>

<div id="jobs">
  <% @jobs.each do |job| %>
    <%= link_to job do %>
      <div class='job-list-item'>
        <p class='lead'>
          <strong><%= job.title %> </strong> - <small><%= link_to job.company.name, job.company %></small>
        </p>
      </div>
    <% end %>
  <% end %>
</div>
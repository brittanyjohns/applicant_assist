<p style="color: green"><%= notice %></p>

<%= render @job %>

<div>
  <%= link_to "Edit this job", edit_job_path(@job) %> |
  <%= link_to "Back to jobs", jobs_path %>
  <%= link_to "MORE INFO", get_details_job_path(@job) %>

  <%= button_to "Destroy this job", @job, method: :delete %>
</div>
<% @job.applications.each do |application| %>
<%= render application %>
<% end %>
<%= simple_form_for(@doc) do |f| %>
  <%= f.error_notification %>
  <%= if f.object.errors[:base].present?
    f.error_notification message: f.object.errors[:base].to_sentence
  end %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :doc_type %>
    <%= f.input :body %>
    <%= f.input :raw_body %>
    <%= f.input :current %>
    <%= f.rich_text_area :displayed_content %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
